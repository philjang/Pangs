<h3>Editing <%= selectedRestaurant.name %></h3>
<h3>Current Values</h3>
<h4>Address: <%= selectedRestaurant.address %></h4> 
<h4>Note: <%= selectedRestaurant.note %></h4> 
<h4>Rating: <%= selectedRestaurant.rating %></h4> 

<form action="/restaurants/<%=selectedRestaurant.id %>/?_method=put" method="post">
    <div>
        <h3>New Values:</h3>
        <label for="name">Name:</label>
        <input type="name" name="name" id="name" value="<%= selectedRestaurant.name %>" required>
    </div>

    <div>
        <label for="address">Address:</label>
        <input type="text" name="address" id="address" value="<%= selectedRestaurant.address %>">
    </div>

    <div>
        <label for="note">Note:</label>
        <textarea type="text area" name="note" id="note"><%= selectedRestaurant.note %></textarea>
    </div>

    <div>
        <label for="rating">Rating:</label>
        <input type="number" name="rating" id="rating" value="<%= selectedRestaurant.rating %>" required>
    </div>

    <button type="submit">Edit Restaurant Details</button>
</form>

<div>
    <a href="/restaurants/<%= selectedRestaurant.id %>">Done Editing</a>
</div>

<% if (menuArr[0]) { %>
    <div class ="menu-container">
    <div class="menu">
        <ul>
            <% menuArr.forEach(menuItem => { %>
            <h4><%= menuItem.name %></h4>
            <p>Description: <%= menuItem.description %></p>
            <p>Price: $<%= menuItem.price %></p>

            <form action="/restaurants/<%=selectedRestaurant.id%>/<%=menuItem.id%>/?_method=DELETE" method="post">
                <button type="submit">Delete This Item...</button>
            </form>
            
            <% }) %>
        </ul>
    </div>
<% } else { %>
    <div class ="menu-container">
    <div class="no-menu"><p>No Menu Highlights to Delete!</p></div>
<% } %>
    
    <form action="/restaurants/<%= selectedRestaurant.id %>/?_method=DELETE" method="post">
        <button type="submit">Delete This Restaurant...</button>
    </form>
    </div>