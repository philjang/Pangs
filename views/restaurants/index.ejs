<section class="padding-top contact-section bg-dark">
    
    <div class="container bg-dark bg-opacity-50 py-3">
        <div class="col-md-10 col-lg-8 mx-auto text-center">
            <h2 class="text-white">Your Restaurants</h2>
        </div>
    </div>
    
    <div class="container px-4 px-lg-5 align-items-center">
        <div class="row mx-0 gx-4 gy-5 gx-lg-5 py-4 py-lg-5 container align-content-around justify-content-around">
            <% restaurantArr.forEach(restaurant => { %>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <h4 class="text-uppercase m-0">
                                <a href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a>
                            </h4>
                            <hr class="mb-1 mt-4 mx-auto" />
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="container bg-dark bg-opacity-50 py-5">
        <div class="col-md-10 col-lg-8 mx-auto text-center">
            <div class="card py-4 h-100">
                <div class="card-body text-center">
                    <h4 class="text-uppercase m-0">
                        <a href="/restaurants/new">
                            <i class="fas fa-angle-double-right"></i>___Add New Restaurant___<i class="fas fa-angle-double-left"></i>
                        </a>
                    </h4>
                </div>
            </div>
        </div>
    </div>

</section>